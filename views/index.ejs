        <!--HOME PAGE-->
        <!--Example topics am discussing-->
        <section id="Home page">
          <div class="container" >
            
            <ul id="postList">
              <% posts.forEach(post => { %>
                  <li class="post-item">
                      <h1><%= post.title %></h1>
                      <small><%= post.date %></small>
                      <p><%= post.content.substring(0, 100) %></p>
                      <small>By <%= post.author %></small>
                      <div class="expansion">
                          <div><a class="expand" data-post-id="<%= post.id %>" href="#">Read more</a></div>                        
                          <div><a class="edit" href="/edit/<%= post.id %>">Edit</a></div> 
                          <div><a class="delete" href="/api/post/delete/<%= post.id %>">Delete</a></div>
                      </div>                      
                      <div class="expanded-content" id='expanded-content-'>          
                </li>
              <% }); %>
            </ul>
